<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Search #<%= @search.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Zip</dt>
              <dd><%= @search.zip %></dd>

              <dt>Weights</dt>
              <dd><%= @search.weights %></dd>

              <dt>Cardio</dt>
              <dd><%= @search.cardio %></dd>

              <dt>Studios</dt>
              <dd><%= @search.studios %></dd>

              <dt>Classes</dt>
              <dd><%= @search.classes %></dd>

              <dt>Pool</dt>
              <dd><%= @search.pool %></dd>

              <dt>Hot tub</dt>
              <dd><%= @search.hot_tub %></dd>

              <dt>Basketball</dt>
              <dd><%= @search.basketball %></dd>

              <dt>Raquetball</dt>
              <dd><%= @search.raquetball %></dd>

              <dt>Trainer</dt>
              <dd><%= @search.trainer %></dd>

              <dt>Sauna</dt>
              <dd><%= @search.sauna %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to searches_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_search_url(@search.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to search_url(@search.id), :method => "delete", :data => { :confirm => "Do you really want to delete this search?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
